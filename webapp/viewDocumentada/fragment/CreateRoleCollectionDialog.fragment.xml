<!-- 
    ====================================================================================================================
    Fragmento de Diálogo: Criar Role Collection (CreateRoleCollectionDialog.fragment.xml)
    ====================================================================================================================
    Este fragmento define um sap.m.Dialog para a criação de uma nova Role Collection.

    - É usado na view `RolesCollections` para obter os dados de uma nova coleção.
    - Contém um `SimpleForm` com campos para o nome e a descrição da nova coleção.
    - Os campos estão ligados a um modelo JSON local chamado `newRoleCollection`, que armazena temporariamente os dados.
    - Os botões `Save` e `Cancel` acionam os métodos `onSaveNewRoleCollection` e `onCancelNewRoleCollection` no
      controller `RolesCollections.controller.ts`.
    ====================================================================================================================
-->
<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form">
    <Dialog
            id="createRoleCollectionDialog"
            title="Create Role Collection">
        <content>
            <form:SimpleForm editable="true">
                <Label text="Name" required="true"/>
                <Input value="{newRoleCollection>/name}"/>
                <Label text="Description" required="true"/>
                <Input value="{newRoleCollection>/description}"/>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveNewRoleCollection"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelNewRoleCollection"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>