<!-- 
    ====================================================================================================================
    Fragmento de Diálogo: Criar Utilizador (CreateUserDialog.fragment.xml)
    ====================================================================================================================
    Este fragmento define um sap.m.Dialog para a criação de um novo Utilizador.

    - É usado na view `Users` para obter os dados de um novo utilizador.
    - Contém um `SimpleForm` com campos para o nome, e-mail e um seletor para o status (Enable/Disable).
    - Os campos estão ligados a um modelo JSON local chamado `newUser`, que armazena temporariamente os dados inseridos.
    - Os botões `Save` e `Cancel` acionam os métodos `onSaveUser` e `onCancelCreate` no `Users.controller.ts`.
    ====================================================================================================================
-->
<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
    <Dialog
            id="createUserDialog"
            title="Create New User">
        <content>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                <Label text="Name" required="true" />
                <Input id="nameInput" value="{newUser>/name}" required="true" />

                <Label text="E-Mail" required="true" />
                <Input id="emailInput" value="{newUser>/email}" type="Email" required="true" />

                <Label text="Status" />
                <Select id="statusSelect" selectedKey="{newUser>/status}">
                    <core:Item key="enable" text="Enable" />
                    <core:Item key="disable" text="Disable" />
                </Select>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveUser" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelCreate" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>