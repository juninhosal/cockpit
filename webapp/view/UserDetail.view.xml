<mvc:View
        controllerName="com.alfa.cockpit.controller.UserDetail"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">
    <Page id="userDetail" showHeader="true">
        <headerContent>
            <Button
                    icon="sap-icon://delete"
                    type="Transparent"
                    press=".onDeletePress" />
            <Button
                    icon="{= ${appView>/layout} === 'TwoColumnsMidExpanded' ? 'sap-icon://full-screen' : 'sap-icon://exit-full-screen'}"
                    type="Transparent"
                    press=".handleFullScreen" />
            <Button
                    icon="sap-icon://decline"
                    type="Transparent"
                    press=".handleClose" />
        </headerContent>
        <content>
            <ObjectHeader
                    title="{name}"
                    responsive="true"
                    fullScreenOptimized="true">
                <attributes>
                    <ObjectAttribute title="E-Mail" text="{email}" />
                    <ObjectAttribute title="Created At" text="{path: 'createdAt', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'long' }}" />
                    <ObjectAttribute title="Last Updated" text="{path: 'modifiedAt', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'long' }}" />
                </attributes>
            </ObjectHeader>
            <Table
                    id="roleCollectionsTable"
                    class="sapUiResponsiveMargin"
                    headerText="Role Collections"
                    items="{navRoleCollections}"
                    itemPress=".onRoleCollectionPress">
                <columns>
                    <Column><Text text="Name" /></Column>
                    <Column><Text text="Description" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <Text text="{roleCollection/name}" />
                            <Text text="{roleCollection/description}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>