<mvc:View
        controllerName="com.alfa.cockpit.controller.UsersList"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <Page id="usersListPage" title="Users">
        <content>
            <Table
                    id="usersTable"
                    inset="false"
                    items="{/Users}"
                    itemPress=".onListItemPress">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Users" level="H2"/>
                        <ToolbarSpacer/>
                        <Button text="Create" type="Transparent" press=".onCreatePress" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="User Name" /></Column>
                    <Column><Text text="E-Mail" /></Column>
                    <Column minScreenWidth="Tablet" demandin="true"><Text text="Last Updated" /></Column>
                    <Column hAlign="End"><Text text="" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <Text text="{name}" />
                            <Text text="{email}" />
                            <Text text="{path: 'modifiedAt', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'medium' }}" />
                            <Button
                                    icon="sap-icon://delete"
                                    type="Transparent"
                                    press=".onDeleteUserPress" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>