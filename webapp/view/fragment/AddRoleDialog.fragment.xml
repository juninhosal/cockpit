<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <TableSelectDialog
            id="addRoleDialog"
            title="Add Roles"
            multiSelect="true"
            items="{/Roles}"
            confirm=".onAddRoleDialogConfirm"
            cancel=".onAddRoleDialogCancel">
        <columns>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Description"/></Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{name}"/>
                    <Text text="{description}"/>
                </cells>
            </ColumnListItem>
        </items>
    </TableSelectDialog>
</core:FragmentDefinition>