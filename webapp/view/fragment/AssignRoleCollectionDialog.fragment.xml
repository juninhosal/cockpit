<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <TableSelectDialog
            id="assignRoleCollectionDialog"
            title="Assign Role Collections"
            multiSelect="true"
            items="{/RoleCollections}"
            confirm=".onAssignRoleCollectionDialogConfirm"
            cancel=".onAssignRoleCollectionDialogCancel">
        <columns>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Description"/></Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{name}"/>
                    <Text text="{description}"/>
                </cells>
            </ColumnListItem>
        </items>
    </TableSelectDialog>
</core:FragmentDefinition>