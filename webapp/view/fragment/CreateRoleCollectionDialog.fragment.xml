<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form">
    <Dialog
            id="createRoleCollectionDialog"
            title="Create Role Collection">
        <content>
            <form:SimpleForm editable="true">
                <Label text="Name" required="true"/>
                <Input value="{newRoleCollection>/name}"/>
                <Label text="Description" required="true"/>
                <Input value="{newRoleCollection>/description}"/>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveNewRoleCollection"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelNewRoleCollection"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>